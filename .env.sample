# LinkedIn Credentials (for local mode)
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-password-here

# Scraper Settings
MIN_DELAY=10
MAX_DELAY=25
MAX_SEARCH_PAGES=100

# Browser Settings
HEADLESS=false
USER_AGENT=

# VPN Settings (Optional)
ENABLE_VPN=false
VPN_COMMAND=protonvpn-cli c -r

# Export Settings
DATA_DIR=data
DEFAULT_EXPORT_FORMAT=csv

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/linkedin-spider.log

# ==============================================================
# DISTRIBUTED SCRAPING SETTINGS (Docker/Kubernetes)
# ==============================================================

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/linkedin_spider

# Redis Queue Configuration
REDIS_URL=redis://redis:6379/0
QUEUE_NAME=linkedin:urls

# Worker Configuration
WORKER_MODE=true
BATCH_SIZE=1
MAX_RETRIES=3
RETRY_DELAY=5

# Session Management
SESSION_COOKIE_PATH=/tmp/linkedin_cookies.pkl
LINKEDIN_COOKIES_B64=

# Worker Identity (auto-set by Kubernetes)
HOSTNAME=
